<UserControl x:Class="Labb3_NET22.View.ScoreScreenUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Labb3_NET22.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    
       

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>

        
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="20"/>
        </Grid.ColumnDefinitions>

        <Grid.Background>
            <ImageBrush ImageSource="/Images/QuizBackground.jpg"
                Stretch="UniformToFill"/>
        </Grid.Background>


        <Border Grid.Row="3" Grid.Column="2" 
                Width="60"
                Background="#AA000000" 
                Padding="10" 
                CornerRadius="10">

            <TextBlock Foreground="GhostWhite"
                       Text="{Binding FinalScoreText}"/>


        </Border>

        <Border Grid.Row="4" Grid.Column="2" 
                Width="60"
                Background="#AA000000" 
                Padding="10" 
                CornerRadius="10">
            
            <TextBlock Foreground="GhostWhite"
                Text="{Binding Percent}"/>

        </Border>


        <Border Grid.Row="6" Grid.Column="2" 
                Background="#AA000000"
                Height="40"
                Padding="10" 
                CornerRadius="10">

            <TextBlock Foreground="GhostWhite"
                       TextWrapping="Wrap"
                       FontSize="14"
                       HorizontalAlignment="Center"
                       TextAlignment="Center"
                       Text="{Binding FeedBack}"/>

        </Border>

        <Button Grid.Row="7"
                Grid.Column="2"
                Content="Go to Start"
                Height="30"
                Width="100"
                Click="CloseQuiz_Click"
                Background="DarkOliveGreen"/>
    </Grid>
</UserControl>

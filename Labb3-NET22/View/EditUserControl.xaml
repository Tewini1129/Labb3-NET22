<UserControl x:Class="Labb3_NET22.View.EditUserControl"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Labb3_NET22.View"
        mc:Ignorable="d"
        Height="450" Width="800">
    
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="20"/>
        </Grid.ColumnDefinitions>

        <Grid.Background>
            <ImageBrush ImageSource="/Images/QuizBackground.jpg"
                        Stretch="UniformToFill"/>
        </Grid.Background>


        <!--Name of Quiz-->
        <Border Grid.Row="9" Grid.Column="1" 
                Background="#AA000000" 
                Padding="10" 
                CornerRadius="10">

            <TextBlock Text="Editing" 
                       FontSize="16"
                       Foreground="GhostWhite"/>
        </Border>

        <Border Grid.Row="10" Grid.Column="2" 
                Background="#AA000000" 
                Padding="10" 
                CornerRadius="10">

            <TextBlock x:Name="EditingTitle" 
                       Text="" 
                       FontSize="20" 
                       HorizontalAlignment="Left" 
                       VerticalAlignment="Top"
                       Foreground="GhostWhite"/>
        </Border>

        
        <!--Add Question-->
        <Border Grid.Row="6" Grid.Column="3">
            <Button x:Name="AddQuestionBtn" 
                    Content="+ Add Questions" 
                    FontSize="18"
                    Click="AddQuestionClick"
                    Background="DarkOliveGreen"/>
            
        </Border>

        <!--Rename Title-->
        <Border Grid.Row="5" Grid.Column="3">
            <Button x:Name="RenameBtn" 
                    Content="Rename Titel" 
                    FontSize="18"
                    Click="RenameClick"
                    Background="DarkOliveGreen"/>
        </Border>

        <!--Delete & Save -->
        <Border Grid.Row="8" Grid.Column="3">
            <Button x:Name="SaveQuizBtn" 
             Content="Save Quiz"
             FontSize="18"
             Click="SaveQuizClick"
             Background="DarkOliveGreen"/>
        </Border>

        <Border Grid.Row="9" Grid.Column="3">
            <Button x:Name="DeleteQuizBtn" 
             Content="Delete Quiz" 
             FontSize="18"
             Click="DeleteQuizClick"
                    Background="DarkOliveGreen"/>
        </Border>



        <!--List of Questions-->
        
        <Border Grid.Row="2" 
                Grid.Column="5" 
                Grid.ColumnSpan="2">
            
            <TextBlock x:Name="AmountOfQuestions" 
                       Text="All Questions - "
                       Background="DarkOliveGreen"/>
        </Border>

        <!--Edit Question-->
        <Border Grid.Row="3" 
                Grid.Column="5"
                Grid.RowSpan="3"
                Grid.ColumnSpan="2">
            
            <ListBox x:Name="QuestionsListBox" 
                     MouseDoubleClick="EditQuestion_Click"
                     FontSize="14"
                     Background="DarkOliveGreen"/>
        </Border>

    </Grid>
</UserControl>

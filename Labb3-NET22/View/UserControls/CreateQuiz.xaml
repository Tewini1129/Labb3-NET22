<UserControl x:Class="Labb3_NET22.View.UserControls.CreateQuiz"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Labb3_NET22.View.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="170"/>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="20"/>
        </Grid.ColumnDefinitions>

        <!-- Name Quiz-->
        <Border Grid.Row="1" Grid.Column="2" Grid.ColumnSpan="3">
            <TextBlock Text="Name Your Quiz" FontSize="30"/>
        </Border>

        <Border Grid.Row="2" Grid.Column="2" Grid.ColumnSpan="3" BorderThickness="2" BorderBrush="Black">
            <TextBox FontSize="22"/>
        </Border>

        
        <Border>
            
        </Border>

        
        <Border Grid.Row="5" Grid.Column="3">
            <TextBlock x:Name="CurrentQuestions" 
                       Text="You currently have 0 questions" 
                       TextWrapping="Wrap"
                       FontSize="14"/>
        </Border>

        <Border Grid.Row="6" Grid.Column="3">
            <Button x:Name="AddQuestionBtn" Content="+ Add Questions" Click="AddQuestionClick" FontSize="18"/>
        </Border>

        <Border>
            <Button Content="Save Quiz"/>
        </Border>
    </Grid>
</UserControl>
